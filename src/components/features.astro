---
// @ts-ignore
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";
import beachesImage from "assets/beaches.jpeg";
import cocktailsImage from "assets/cocktails.jpeg";
import eventsImage from "assets/events.jpeg";
import hotelsImage from "assets/hotels.jpeg";
import foodImage from "assets/food.jpeg";
import transportationImage from "assets/transportation.png";
import activitiesImage from "assets/activities.png";
import Link from "@components/ui/link.astro";

const features = [
  {
    title: "Top beaches & escapes",
    description:
      "Unwind and soak up the sun on world-class beaches, including our secret spots and hidden gems.",
    icon: "bx:bxs-sun",
    image: beachesImage,
    url: "",
  },
  {
    title: "Food for every occasion",
    description:
      "Michelin-star dining, local authentic cuisine, the best sushi we've ever had, & our top picks for best marg in town. Mouth watering yet?",
    icon: "bx:bxs-pizza",
    image: foodImage,
    url: "",
  },
  {
    title: "Delicious cocktails & vibrant nightlife",
    description:
      "Craft cocktail lover? Best sports bar? Live music seeker? Late-night DJ popups?",
    icon: "bx:bxs-moon",
    image: cocktailsImage,
    url: "",
  },
  {
    title: "Must-see spots & private events",
    description:
      "Historical, cultural, off the beaten path, invite only, or just amazing, these are the ones you won't want to miss!",
    icon: "bx:bxs-crown",
    image: eventsImage,
    url: "",
  },
  {
    title: "Local pro tips & tricks",
    description:
      "Navigating customs, culture, language, currency, renting a condo, or buying a home: let us make your transition to 'No Bad Days' life seamless.",
    icon: "bx:bxs-lock",
    image: beachesImage
  },
  {
    title: "Endless activities",
    description:
      "Boating, whale-watching, surfing, snorkeling, golfing, ATV-rides & more. Let us connect you with the best experiences (and price).",
    icon: "bx:bxs-ship",
    image: activitiesImage,
    url: "",
  },
  {
    title: "Hotels & Airbnbs",
    description:
      "Unwind in paradise. Find your perfect stay with our partnering hotels and premium Airbnb hosts.",
    icon: "bx:bxs-building",
    image: hotelsImage,
    url: "",
  },
  {
    title: "Exclusive transportation services",
    description:
      "Experience the ultimate in comfort and luxury with our hand-picked private transportation services.",
    icon: "bx:bxs-taxi",
    image: transportationImage,
    url: "",
  },
];
---

<style>
  .image-hover {
      opacity: 1.0;
      position: relative;
      overflow: hidden;
  }
  .image-hover img {
    transition: transform .55s ease-in-out;
    -moz-transition: transform .55s ease-in-out;
    -webkit-transition: transform .55s ease-in-out;
  }
  .image-hover:hover img {
    transform: scale(1.25);
    transition: transform .55s ease-in-out;
    -moz-transition: transform .55s ease-in-out;
    -webkit-transition: transform .55s ease-in-out;
  }

  .image-hover:after {
      content:'\A';
      position:absolute;
      width:100%; height:100%;
      top:0; left:0;
      background:rgba(0,0,0,0.6);
      opacity:0;
      transition: all 0.5s;
      -webkit-transition: all 0.5s;
  }
  .image-hover:hover:after {
      opacity:1;
  }
</style>

<div class="mt-16 md:mt-0">
  <h2 id="learn-more-scroll-id" class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    We've got you covered
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Bringing you the best in every category because we love this place so much.
  </p>
</div>
<div class="mt-8"><Link href="/experiences">See all experiences â†’</Link>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16 mb-16">
  {
    features.map((item) => (
      <div>
        <a href={item.url}>
          <div class="image-hover">
            <Picture
            src={item.image}
            alt="Hola Cabo"
            widths={[256, 512]}
            aspectRatio="1:1"
            sizes="(max-width: 256px) 100vw, 256"
            loading="eager"
            />  
          </div>
          <div class="flex gap-4 items-start mt-8">
            <div class="mt-1 bg-color-primary rounded-full  p-2 w-8 h-8 shrink-0">
              <Icon class="text-white" name={item.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
              <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
            </div>
          </div>
        </a>
    </div>
    ))
  }
</div>
