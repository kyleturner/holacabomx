---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import Divider from "@components/ui/divider.astro";

const { 
  title, 
  subtitle, 
  backgroundImage, 
  backgroundColor, 
  center,
  children 
} = Astro.props

const defaultCSS = "home grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 mb-16"
const centerCSS = "text-center home lg:grid-cols-2 place-items-center pt-16 md:pt-12 md:pb-24"
const cssClass = center ? centerCSS : defaultCSS
---

<!-- Styles scoped to this component, only. -->
<style>
.home {
  background-color: var(--backgroundColor);
  background-image: var(--backgroundImage);
  background-position: center;
  background-repeat: no-repeat; 
  background-size: cover;
  padding: 64px;
  min-height: 700px;
}
</style>

<main 
  style={{'--backgroundImage': `url(${backgroundImage})`, '--backgroundColor': `${backgroundColor}`}} 
  class={cssClass} 
  onload="this.style.opacity=1">
    <div class="py-32 md:order-1"></div>
    <div>
      <h1 class="header-text text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">{title}</h1>
      {center ? (<Divider 
        image="/src/assets/holacabo-white-transparent.png" 
        clazz="text-white p-0 bg-color-transparent"/> ) : ("")}
      <p class="header-text text-xl text-white">{subtitle}</p>
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <slot></slot>
      </div>
    </div>
</main>
