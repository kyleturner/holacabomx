---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---
<!-- Styles scoped to this component, only. -->
<style>
</style>

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Hola Cabo"
      widths={[200, 400, 512]}
      aspectRatio="1:1"
      sizes="(max-width: 512px) 100vw, 512px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Your local inside scoop on the best of Baja Sur
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Unlock the ultimate guides to unforgettable experiences in Cabo San Lucas, San Jose, Todos Santos, East Cape & more.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/guides/cabo"
        class="flex gap-1 items-center justify-center bg-color-brand-primary"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
        Download Our Digital Starter Guide
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#learn-more-scroll-id"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-5 h-5" name="bx:bxs-down-arrow-alt" />
        Learn More
      </Link>
    </div>
  </div>
</main>
