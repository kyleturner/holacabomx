---
import { Dropdown, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <Dropdown class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-8 sm:py-5 text-gray-600 hover:text-gray-900">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-96 z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="px-5 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col text-lg">
          {
            children && children.map((item) => (
              <a
                href={item.path}
                class={item.disabled ? "py-4 text-gray-300" : "first:py-0 py-4 text-gray-600 hover:text-gray-900"}
                style={item.disabled ? "pointer-events: none; cursor:default;": ""}>
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </Dropdown>
</li>
