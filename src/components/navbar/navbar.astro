---
import { getCollection } from "astro:content";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/holacabo.png";

// Filter experiences entries with 'draft: false' & date before current date
const publishedGuides = await getCollection("guides", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});


const menuitems = [
  {
    title: "Welcome",
    path: "/"
  },
  //   {
  //   title: "Discover",
  //   path: "/discover",
  // },
  {
    title: "Digital Guides",
    path: "#",
    children: [
      { title: "Cabo San Lucas", path: "/guides/cabo" },
      { title: "San Jose del Cabo", path: "/guides/sanjose" },
      { title: "Todos Santos", path: "/guides/todos" },
      { title: "East Cape", path: "/guides/east-cape" },
      { title: "Valle de Guadalupe", path: "/guides/valle-guadalupe" },
      { title: "âœ¨ Baja Explorer Pack", path: "/guides/baja-explorer" },
    ],
  },
  {
    title: "Local Experiences",
    path: "/experiences",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between lg:gap-2 md:gap-2">
        <Picture
        src={heroImage}
        alt="Hola Cabo"
        widths={[200, 400, 512]}
        aspectRatio="1:1"
        sizes="(max-width: 48px) 100vw, 48px"
        loading="eager"
        format="avif"
        />
        <a href="/" class="text-lg">
          <span class="font-bold text-slate-800">Hola</span>
          <span class="text-slate-500">Cabo</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
          <li>
            <Link
            href="https://instagram.com/holacabo"
            target="_blank"
            class="flex lg:px-3 py-3 text-slate-200 hover:text-slate-600"
            rel="noopener">
            <Icon class="h-4 md:h-6" name="simple-icons:instagram" />
          </Link>    
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
