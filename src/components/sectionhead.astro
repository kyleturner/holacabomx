---
const { 
  align = "center",
  category,
  subtitle = null,
} = Astro.props;

import Divider from "@components/ui/divider.astro";
import heroImage from "assets/holacabo.svg";

const snippetClass = subtitle ? "lg:tracking-tight mb-2 pt-4 pb-0" : "lg:tracking-tight mb-4 pt-4 pb-4"
---

<div class:list={[align === "center" && "text-center"]}>
  { category && (<span class="color-primary uppercase tracking-wider text-sm font-medium">{category}</span>) }
  <p class={snippetClass}><slot name="snippet"></slot></p>
  { subtitle && (<slot name="subtitle"></slot>) }
  <slot name="buttons"></slot>
  <Divider image={heroImage.src} clazz="p-0 pt-4" />
</div>
