---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Newsletter from "@components/newsletter.astro";
import ExperienceFeature from "@components/experienceFeature.astro";
import Photos from "@components/photos.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/Layout.astro";

const metadata = {
  'title': "Your key to unlock the best of Los Cabos",
  'subtitle': "Welcome to the ultimate locals guide to eat, drink and explore the best of Baja Sur.",
  'ctaPrimary': {
      'title': "View experiences",
      'href': "/experiences"
  },
  'ctaSecondary': {
      'title': "Learn more",
      'href': "#learn-more-scroll-id"
  },
  'ctaExperienceFeature': {
    'title': "View experience",
    'href': "/experiences/best-places-to-escape-the-heat-this-summer-in-los-cabos"
  }
}
---

<Layout title="">
      <Hero 
        title={metadata.title}
        subtitle={metadata.subtitle}
        backgroundImage="/hero-3.jpg"
        backgroundColor="rgba(5, 5, 5, 1.0)"
      >
      <Link
            href={metadata.ctaPrimary.href}
            class="flex gap-1 items-center justify-center bg-color-primary"
            rel="noopener">
            <Icon class="text-white w-5 h-5" name="bx:bxs-right-arrow-alt" />
            {metadata.ctaPrimary.title}
      </Link>
      <Link
            href={metadata.ctaSecondary.href}
            size="lg"
            style="outline"
            rel="noopener"
            class="flex gap-1 items-center justify-center">
            <Icon class="text-slate-900 w-5 h-5" name="bx:bxs-down-arrow-alt" />
            {metadata.ctaSecondary.title}
      </Link>
      </Hero>
      <Container>
        <ExperienceFeature />
        <Features />
        <Logos />
        <Photos />
         
        <Newsletter />
      </Container>
</Layout>
